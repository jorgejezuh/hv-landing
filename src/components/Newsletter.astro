<section id="newsletter" aria-labelledby="newsletter-title" class="relative text-center py-16 px-4 text-white overflow-hidden rounded-xl shadow-xl max-w-lg mx-auto mb-16"
  style="background: linear-gradient(120deg, #bd6260 0%, #a34d4b 60%, #6d3a3a 100%);">
  <div class="absolute inset-0 bg-black/10 pointer-events-none rounded-xl"></div>
  <div class="relative z-10">
    <h2 id="newsletter-title" class="text-2xl md:text-3xl font-bold text-center mb-6">Suscríbete</h2>
    <form action="#" method="post" aria-describedby="newsletter-title" class="flex flex-col sm:flex-row gap-4 items-center justify-center w-full">
      <label for="newsletter-email" class="sr-only">Correo electrónico</label>
      <input type="email" id="newsletter-email" name="newsletter" placeholder="Tu correo electrónico" required class="w-full sm:w-auto flex-1 px-4 py-2 rounded-lg border border-gray-300 bg-white/90 text-gray-900 focus:border-primary focus:ring-2 focus:ring-primary/20 transition" />
      <button type="submit" class="inline-block px-8 py-3 bg-gradient-to-r from-pink-400 to-pink-700 text-white rounded-lg font-bold text-lg shadow-md hover:from-pink-700 hover:to-pink-400 hover:scale-105 transition-all" role="button">Suscribir</button>
    </form>
  </div>
</section>
